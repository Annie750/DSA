import java.util.*;

class Solution {
    public long subArrayRanges(int[] nums) {
        int n = nums.length;
        long res = 0;

        // contribution as MAX
        res += getContribution(nums, true);

        // contribution as MIN
        res -= getContribution(nums, false);

        return res;
    }

    private long getContribution(int[] nums, boolean isMax) {
        int n = nums.length;
        Stack<Integer> stack = new Stack<>();
        long sum = 0;

        for (int i = 0; i <= n; i++) {
            int cur = (i == n) ? (isMax ? Integer.MAX_VALUE : Integer.MIN_VALUE) : nums[i];

            while (!stack.isEmpty() &&
                  (isMax ? nums[stack.peek()] < cur : nums[stack.peek()] > cur)) {

                int mid = stack.pop();
                int left = stack.isEmpty() ? -1 : stack.peek();
                int right = i;

                long count = (long)(mid - left) * (right - mid);
                sum += count * nums[mid];
            }
            stack.push(i);
        }
        return sum;
    }
}
