/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int data;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int val) { data = val; left = null, right = null }
 * }
 **/

class Solution {

    List<List<Integer>> treeTraversal(TreeNode root) {
        List<List<Integer>> ll = new ArrayList<>();

        ll.add(inorder(root, new ArrayList<>()));
        ll.add(preorder(root, new ArrayList<>()));
        ll.add(postorder(root, new ArrayList<>()));

        return ll;
    }

    private List<Integer> inorder(TreeNode node, List<Integer> l) {
        if (node == null) return l;

        inorder(node.left, l);
        l.add(node.data);
        inorder(node.right, l);

        return l;
    }

    private List<Integer> preorder(TreeNode node, List<Integer> l) {
        if (node == null) return l;

        l.add(node.data);
        preorder(node.left, l);
        preorder(node.right, l);

        return l;
    }

    private List<Integer> postorder(TreeNode node, List<Integer> l) {
        if (node == null) return l;

        postorder(node.left, l);
        postorder(node.right, l);
        l.add(node.data);

        return l;
    }
}
