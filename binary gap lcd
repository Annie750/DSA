class Solution {
public int binaryGap(int n) {
    int prevIndex = -1;
    int maxDistance = 0;
    int index = 0;

    while (n > 0) {
        if ((n & 1) == 1) {
            if (prevIndex != -1) {
                maxDistance = Math.max(maxDistance, index - prevIndex);
            }
            prevIndex = index;
        }
        index++;
        n >>= 1;
    }

    return maxDistance;
}}
