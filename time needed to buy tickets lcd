class Solution {
    public int timeRequiredToBuy(int[] tickets, int k) {
        int T = tickets[k];
        int time = 0;

        for (int i = 0; i < tickets.length; i++) {
            if (i <= k) {
                time += Math.min(tickets[i], T);
            } else {
                time += Math.min(tickets[i], T - 1);
            }
        }
        return time;
    }
}
