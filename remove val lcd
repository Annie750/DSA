import java.util.*;

class Solution {

    public int removeElement(int[] nums, int val) {
        int l = nums.length;
        int count = 0;

        for (int i = 0; i < l; i++) {
            if (nums[i] == val) {
                count++;
                nums[i] = nums[l - 1];
                l--;
                i--; // re-check swapped value
            }
        }

        return nums.length - count;
    }
}
